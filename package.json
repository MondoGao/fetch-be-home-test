{
  "name": "feach-home-test-backend",
  "version": "1.0.0",
  "description": "home test solution for fetch.com internship",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "dev": "npm run dev:deps && npm run dev:start",
    "dev:start": "nodemon src/server.ts",
    "dev:deps": "docker-compose up -d",
    "build": "tsc -P tsconfig.build.json",
    "prepare": "husky install",
    "lint": "tsc --noEmit && eslint \"**/*.ts\" --quiet",
    "lint:fix": "tsc --noEmit && eslint \"**/*.ts\" --quiet --fix",
    "test:integration": "npm run test:integration:deps && test:integration:run",
    "test:integration:run": "NODE_ENV=test jest --runInBand --forceExit",
    "test:integration:deps": "docker-compose up -f docker-compose.test.yml -d && sleep 10"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MondoGao/fetch-be-home-test.git"
  },
  "keywords": [
    "koa",
    "interview",
    "fetch"
  ],
  "author": "Mondo <mondogao@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MondoGao/fetch-be-home-test/issues"
  },
  "homepage": "https://github.com/MondoGao/fetch-be-home-test#readme",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/koa": "^2.13.9",
    "@types/koa__router": "^12.0.1",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/node": "^20.8.0",
    "@types/supertest": "^2.0.13",
    "@types/verror": "^1.10.7",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "@koa/router": "^12.0.0",
    "dotenv": "^16.3.1",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.1",
    "mysql2": "^3.6.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.3.17",
    "verror": "^1.10.1",
    "winston": "^3.10.0"
  }
}
